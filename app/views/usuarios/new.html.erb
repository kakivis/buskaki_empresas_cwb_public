<div id="criar-conta-form">
  <%= form_for @user, url: usuarios_create_path, :html => {:class => "form-control"} do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <div class="alert-error">
          O formulário contém <%= pluralize(@user.errors.count, "erro") %>.
        </div>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :nome %>
      <%= f.text_field :nome %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label :senha %>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :confirmacao_de_senha %>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
      <%= f.submit "Cadastrar"%>
    </div>
  <% end %>
</div>